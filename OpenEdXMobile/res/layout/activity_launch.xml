<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false"
        android:background="@color/secondaryBaseColor">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edx_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/phonetic_app_name"
            app:srcCompat="@drawable/nafath_logo" />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/edx_quadruple_margin"
            android:layout_marginTop="@dimen/widget_margin_x_double"
            android:layout_marginEnd="@dimen/edx_quadruple_margin"
            android:layout_marginBottom="@dimen/edx_default_margin_double"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/phonetic_app_name"
                app:srcCompat="@drawable/icon_nafath_splash" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_in_tv"
                android:visibility="gone"
                style="@style/bold_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/auth_panel_btn_height"
                android:layout_marginTop="@dimen/widget_margin"
                android:background="@drawable/light_selectable_rounded_box_overlay"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/already_have_an_account"
                android:textColor="@android:color/white"
                android:textSize="@dimen/edx_medium" />
        </LinearLayout>

    </RelativeLayout>
</layout>
